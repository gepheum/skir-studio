    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@web/dev-server": "^0.4.6",
    "@web/dev-server-import-maps": "^0.2.1",
    "@web/dev-server-legacy": "^1.0.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
